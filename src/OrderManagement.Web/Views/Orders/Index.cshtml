@model IEnumerable<OrderManagement.Web.Models.OrderListViewModel>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<form asp-action="Index" method="get" class="card p-3 mb-4">
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <label class="control-label">Filter by Client</label>
                <select name="clientId" class="form-control" asp-items="@ViewBag.Clients">
                    <option value="">All Clients</option>
                </select>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label class="control-label">Filter by Status</label>
                <select name="status" class="form-control" asp-items="@ViewBag.Statuses">
                    <option value="">All Statuses</option>
                </select>
            </div>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <div class="form-group">
                <button type="submit" class="btn btn-outline-secondary">Filter</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ClientName)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClientName)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@item.TotalPrice.ToString("C")</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>