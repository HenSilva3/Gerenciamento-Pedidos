@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Order Management System</h1>
    <p class="lead">A simple system to manage clients, products, and orders.</p>
    <hr class="my-4">
    <p>Select a section below to get started:</p>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a class="btn btn-primary btn-lg" asp-controller="Clients" asp-action="Index" role="button">
            <i class="fas fa-users"></i> Manage Clients
        </a>
        <a class="btn btn-success btn-lg" asp-controller="Products" asp-action="Index" role="button">
            <i class="fas fa-box"></i> Manage Products
        </a>
        <a class="btn btn-info btn-lg" asp-controller="Orders" asp-action="Index" role="button">
            <i class="fas fa-receipt"></i> Manage Orders
        </a>
    </div>
</div>
